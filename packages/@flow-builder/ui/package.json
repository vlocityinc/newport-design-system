{
    "name": "@flow-builder/ui",
    "version": "0.0.1",
    "private": true,
    "npm2lwc": {
        "deployToCore": true,
        "namespace": "builder_platform_interaction",
        "ui": true
    },
    "scripts": {
        "build:ts": "tsc",
        "build": "yarn build:ts",
        "test": "jest src",
        "test:update-snapshots": "jest --updateSnapshot",
        "coverage": "yarn test --coverage",
        "lint": "eslint --ignore-pattern src/**/*.test.ts --max-warnings 1860 src/**/*.ts",
        "ci:test": "yarn test --verbose false",
        "ci:test:coverage": "jest src --coverage --config jest.config.release.js"
    },
    "files": [
        "src/builder_platform_interaction/*/!(__container__|__integration__|__perf__|__raptorMocks__|__test__|__tests__)"
    ],
    "lwc": {
        "mapNamespaceFromPath": true,
        "modules": [
            "src"
        ]
    },
    "devDependencies": {},
    "dependencies": {
        "@flow-builder/auto-layout-canvas": "0.0.1",
        "@flow-builder/shared-utils": "0.0.1"
    }
}
