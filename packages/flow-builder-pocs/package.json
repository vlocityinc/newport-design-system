{
    "name": "pocs",
    "version": "0.0.1",
    "private": true,
    "description": "Builder POCs",
    "scripts": {
        "lint:poc": "eslint src/main/modules/** --ext .js --max-warnings 0",
        "debug": "node --inspect-brk ./node_modules/.bin/jest -i",
        "coverage": "yarn test --coverage",
        "ready": "yarn lint && yarn coverage",
        "git:clean": "git fetch -p && for branch in `git branch -vv | grep ': gone]' | awk '{print $1}'`; do git branch -D $branch; done",
        "clean": "rm -rf build/",
        "build:poc": "rollup -c rollup.config.demo-app.js",
        "serve": "node src/demo-app/server.js",
        "watch": "yarn build:poc --watch",
        "start": "yarn serve",
        "test": "jest --passWithNoTests",
        "test:poc": "jest src/demo-app/modules --config demo.jest.config.json",
        "test:poc:coverage": "jest --coverage src/demo-app/modules --config demo.jest.config.json"
    },
    "devDependencies": {
        "@salesforce-ux/design-system": "^2.7.5",
        "express": "^4.16.4",
        "lwc-components-lightning": "^1.13.7-alpha",
        "npm-run-all": "^4.1.5"
    },
    "dependencies": {
        "@lbf/command": "^0.4.16"
    }
}
